@page
@model Mercato.Pages.Player.ImportPlayersModel
@{
    ViewData["Title"] = "Import des Joueurs";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
        text-align: center;
        color: #007bff;
    }

    form {
        max-width: 500px;
        margin: auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #495057;
    }

    input[type=file] {
        display: block;
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        font-size: 14px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    button[type=submit] {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }

    button[type=submit]:hover {
        background-color: #218838;
    }

    .alert {
        margin-top: 20px;
        padding: 15px;
        color: #721c24;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
    }
</style>

<h1>@ViewData["Title"]</h1>

@if (ViewData.ModelState.IsValid)
{
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="csvFile">SÃ©lectionnez un fichier CSV :</label>
            <input type="file" class="form-control-file" id="csvFile" name="csvFile" accept=".csv">
        </div>
        <button type="submit" class="btn btn-primary">Importer</button>
    </form>
}
else
{
    <div class="alert">
        @foreach (var key in ViewData.ModelState.Keys)
        {
            foreach (var error in ViewData.ModelState[key].Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        }
    </div>
}
